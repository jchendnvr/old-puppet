#!/bin/bash

# Author: Jesse Chenhalls
# Created Date: 20151005


# use this script to add a standard node to puppet
# server will be given the temporary password contained in bootstrap
# bootstrap first variable is the ip and the second is the hostname. 

#Variables 
# $1 - IP Address in 192.168.0.1 format, IP
# $2 - Hostname in example.com or sub.example.com format, HOST
# $3 - biz or int TYPE
# $3 is handled through import 'biz/*.pp' 

IP=$1
HOST=$2
TYPE=$3  # biz or int
ROLE=$4  # serv

# alphanumeric password gen
# tr -cd '[:alnum:]' < /dev/urandom | fold -w18 | head -n1

NODEPATH='/etc/puppet/manifests/'
FULLPATH="$NODEPATH$TYPE"
ROOTTEMPPASS=$(/usr/bin/tr -cd '[:alnum:]' < /dev/urandom | /usr/bin/fold -w18 | /usr/bin/head -n1)
MYSQLPASS=$(/usr/bin/tr -cd '[:alnum:]' < /dev/urandom | /usr/bin/fold -w18 | /usr/bin/head -n1)
BACKUPUSERPASS=$(/usr/bin/tr -cd '[:alnum:]' < /dev/urandom | /usr/bin/fold -w18 | /usr/bin/head -n1)

if [ $(/bin/ls $FULLPATH/$HOST.pp 2>/dev/null) ];
  then 
    /bin/echo "ERROR !!! HOST ALREADY EXISTS - $HOST"
    exit
fi

if [ $TYPE == 'biz' ];
  then  
    SSHTYPE='CLIENT' 
elif [ $TYPE == 'int' ];
  then 
    SSHTYPE='INTERNAL'
else
  echo 'ERROR !!! SSHTYPE NOT VALID'
  exit
fi
  
SPECIALLINE='$DN = "${::fqdn}"'
# Create site.pp file based on type
/bin/echo "# Node generated by script/addnode
node '$HOST' {
  $SPECIALLINE
  \$ROOTPASS = '$ROOTTEMPPASS'
  \$ALLOWPORTS = [25,80,443,587,993]
  \$SSH = '$SSHTYPE'
  \$ROOTEMAIL = 'admin@example.com'
  \$ROOTDBPASS = '$MYSQLPASS'
  \$BACKUPUSERPASS = '$BACKUPUSERPASS'
  include role::$ROLE
}
" >> $FULLPATH/$HOST.pp

if [ $(/bin/ls /var/lib/puppet/ssl/certs/$HOST.pem 2> /dev/null) ]; 
  then
    echo "ERROR!!! puppet relationship already established with $HOST"
    exit
fi


# call bootstrap
/etc/puppet/scripts/bootstrap $IP $HOST

echo "

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!!!    Done Adding Node       !!!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
"

# unset all variables
unset ROOTTEMPPASS
unset HOST
unset IP
unset TYPE
unset MYSQLPASS
unset BACKUPUSERPASS
unset FULLPATH
unset NODEPATH


